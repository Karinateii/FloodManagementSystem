@model IEnumerable<NewLagosFloodDetectionSystem.Models.CsvFile>

@{
    ViewData["Title"] = "Files";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>Uploaded Files</h2>

<p>
    <a asp-action="Upload">Upload a New File</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.Path)
                </td>
                <td class="text-dark">
                    @Html.DisplayFor(modelItem => item.UploadDateTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>