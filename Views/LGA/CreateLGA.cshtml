@using Microsoft.Data.SqlClient;
@model LGA
@{
    ViewBag.Title = "Add LGA";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<div class="card" style="margin-top:10%; margin-right:25%; margin-bottom:10%; margin-left:25%">
    <div class="card-title m-0" style="background-color: #7c452b">
        <h2 class="text-white text-center p-3">Add a new LGA</h2>
    </div>
    <div class="card-body" style="background-color: #e4c35a;">
        <form method="post">
@*            <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="row">
                <div class="form-group col-md-12 mb-2 row text-dark fw-semibold">
                    <label asp-for="LGAName" class="col-md-6">LGA: </label>
                    <div class="col-md-6">
                        <input asp-for="LGAName" placeholder="--Please enter LGA name--" class="col-md-6 form-control mb-2" spellcheck="false" required>
                    </div>
                    <span asp-validation-for="LGAName" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" name="submit" class="btn btn-success" value="Submit" />
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}