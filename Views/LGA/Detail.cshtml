@model NewLagosFloodDetectionSystem.Models.LGA
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<style>
    body {
        background-color: white;
    }
</style>

<dl class="text-dark ml-5">
    <dt>@Html.DisplayNameFor(model => model.LGAName)</dt>
    <dd>@Html.DisplayFor(model => model.LGAName)</dd>
    <dd class="col-sm-10"> 
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cities)
                </th>
            </tr>
            @foreach(var item in Model.Cities)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                </tr>
            }
        </table>
    </dd>
</dl>


