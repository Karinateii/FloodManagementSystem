    *@
</head>
<body id="top">
    <div class="wrapper row1">
        <header id="header" class="hoc clear">
            <div class="fl_left" id="logo">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LASFWS</a>

                @*                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>*@
            </div>
            <nav id="mainav" class="fl_right">
                <ul class="clear">
                    @if (User.IsInRole("admin"))
                    {
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="LGA" asp-action="Index">LGAs</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="City" asp-action="Index">Cities</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="CsvFile" asp-action="Index">Model Files</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="CsvFileCity" asp-action="Index">Prediction Files</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                        </li>
                        @if (!User.IsInRole("admin"))
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="UserAuthentication" asp-action="Register">Register</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="UserAuthentication" asp-action="Login">Login</a>
                            </li>
                        }
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserAuthentication" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>
            </nav>
        </header>
    </div>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="wrapper row4">
        <footer id="footer" class="hoc clear">
            <!-- ################################################################################################ -->
            <h6 class="heading">LASFWS</h6>
            <p>This is a prototype system for prediction and early warning for Lagosians. This system is free and aims to serve the public in its disbursement of vital Information. </p>
