            <li><a class="faicon-facebook" href="#"><i class="fa fa-facebook"></i></a></li>
            <li><a class="faicon-twitter" href="#"><i class="fa fa-twitter"></i></a></li>
            <li><a class="faicon-dribble" href="#"><i class="fa fa-dribbble"></i></a></li>
            <li><a class="faicon-linkedin" href="#"><i class="fa fa-linkedin"></i></a></li>
            <li><a class="faicon-google-plus" href="#"><i class="fa fa-google-plus"></i></a></li>
            <li><a class="faicon-vk" href="#"><i class="fa fa-vk"></i></a></li>
            </ul>
            *@            <nav>
                <ul class="nospace">
                    <li><a href="#"><i class="fa fa-lg fa-home"></i></a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                    <li><a href="#">Privacy</a></li>
                    <li><a href="#">Disclaimer</a></li>
                    <li><a href="#">Cookies</a></li>
                </ul>
            </nav>
            <!-- ################################################################################################ -->

            <div class="wrapper row2 mt-5 pt-0 pb-0">
                <div id="copyright" class="hoc clear pt-2 pb-0 mb-0">
                    <p class="text-center">Copyright &copy; 2023 - All Rights Reserved - <a asp-area="" asp-controller="Home" asp-action="Index">LASFWS</a></p>
                </div>
            </div>
        </footer>
    </div>
    <a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>

    <script src="~/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.backtotop.js" asp-append-version="true"></script>
    <script src="~/js/jquery.mobilemenu.js" asp-append-version="true"></script>
    <script src="~/js/jquery.flexslider-min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/slidingpanes.js" asp-append-version="true"></script>
    <script src="~/js/hoover cards.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
