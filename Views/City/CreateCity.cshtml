@using Microsoft.Data.SqlClient;
@model City
@{
    ViewBag.Title = "Add City";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<div class="card" style="margin-top:10%; margin-right:25%; margin-bottom:10%; margin-left:25%">
    <div class="card-title m-0" style="background-color: #7c452b">
        <h2 class="text-white text-center p-3">Add a new City</h2>
    </div>
    <div class="card-body" style="background-color: #e4c35a;">
        <form asp-controller="City" asp-action="CreateCity" method="post">            
            <div class="row">
                <div class="form-group col-md-12 mb-2 row text-dark fw-semibold">
                    <label asp-for="Name" class="col-md-6">City: </label>
                    <div class="col-md-6">
                        <input asp-for="Name" placeholder="--Please enter City name--" class="col-md-6 form-control mb-2" spellcheck="false" required>                    
                    </div>
@*                    <span asp-validation-for="Name" class="text-danger"></span>*@
                </div>

                <div class="form-group col-md-12 mb-2 row text-dark fw-semibold">
                    <label asp-for="LGAId" class="col-md-6">LGA: </label>
                    <div class="col-md-6">
                        <select asp-for="LGAId" class="col-md-6" asp-items="@ViewBag.LGAs"><option selected disabled>--Select LGA--</option></select>
                    </div>
                    @*                    <span asp-validation-for="LGAId" class="text-danger"></span>*@
                </div>
            </div>
            <input type="submit" class="btn btn-success" value="Submit" />
        </form>        
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
}