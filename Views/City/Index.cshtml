@model IEnumerable<NewLagosFloodDetectionSystem.Models.City>

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cities In Lagos</h2>

<p>
    <a asp-action="CreateCity">Create New</a>
</p>
<table class="table text-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LGA.LGAName)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                None
            </td>
            <td>
                None
            </td>
            <td>
                Constant
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LGA.LGAName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteCity" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>