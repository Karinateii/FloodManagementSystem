@model NewLagosFloodDetectionSystem.Models.User
<style>
    body{
        background-color: white;
    }
</style>
<div class="text-dark ml-5 mt-5">
    <div class="row">
        <div class="col-md-6">
            <h4>Account Details</h4>
        </div>
        <div class="col-md-6">
            <td><a asp-action="Edit" asp-controller="UserAuthentication">Edit Details</a></td>
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.UserName)</td>
                <td>@Html.DisplayFor(model => model.UserName)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Email)</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.LGA)</td>
                <td>@Html.DisplayFor(model => model.LGA)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.City)</td>
                <td>@Html.DisplayFor(model => model.City)</td>                
            </tr>
            <tr>
                <td>Password</td>                
                <td><a asp-action="ChangePassword" asp-controller="UserAuthentication">Change Password</a></td>
            </tr>
        </tbody>
    </table>
</div>
