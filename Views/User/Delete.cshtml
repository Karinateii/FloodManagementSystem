@model NewLagosFloodDetectionSystem.Models.User
@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<a class="nav-link fl_right" asp-action="Cancel">Cancel</a>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Delete User</h4>
        <hr />
        <span>Are you sure you want to delete this user ?</span>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 mt-5">
                <input type="submit" value="Yes" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
