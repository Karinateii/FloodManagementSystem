@model IEnumerable<GlobalDisasterManagement.Models.CsvFile>

@{
    ViewData["Title"] = "Data Files Management";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-file-csv text-purple me-2"></i>Data Files Management
                    </h2>
                    <p class="text-muted mb-0">Manage uploaded CSV files and datasets</p>
                </div>
                <div>
                    <a asp-action="Upload" class="btn btn-purple text-white me-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                        <i class="fas fa-upload me-1"></i> Upload New File
                    </a>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-file me-2"></i>@Html.DisplayNameFor(model => model.Name)</th>
                            <th><i class="fas fa-folder me-2"></i>@Html.DisplayNameFor(model => model.Path)</th>
                            <th><i class="fas fa-clock me-2"></i>@Html.DisplayNameFor(model => model.UploadDateTime)</th>
                            <th class="text-center" style="width: 250px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Any() == true)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <i class="fas fa-file-csv text-success me-2"></i>
                                        <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-muted">@Html.DisplayFor(modelItem => item.Path)</small>
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.UploadDateTime)
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-info-circle"></i> Details
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Are you sure you want to delete this file?');">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="fas fa-file-csv fa-3x mb-3 opacity-25"></i>
                                    <p class="mb-0">No files uploaded yet. Click "Upload New File" to get started.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #667eea !important;
    }
</style>
