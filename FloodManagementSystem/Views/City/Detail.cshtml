@model GlobalDisasterManagement.Models.City
@{
    ViewData["Title"] = "City Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white py-3" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                    <h4 class="mb-0">
                        <i class="fas fa-city me-2"></i>City Details
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">
                                <i class="fas fa-city me-2"></i>City Name
                            </h5>
                            <p class="fs-5 fw-semibold">@Html.DisplayFor(model => model.Name)</p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">
                                <i class="fas fa-map-marked-alt me-2"></i>Region / LGA
                            </h5>
                            <p class="fs-5">@(Model.LGA?.LGAName ?? "N/A")</p>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="mb-3">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-chart-line me-2"></i>Predictions for this City
                        </h5>
                        @if (Model.Predictions?.Any() == true)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Year</th>
                                            <th>Month</th>
                                            <th>Prediction</th>
                                            <th>Model</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var prediction in Model.Predictions.OrderByDescending(p => p.Year).ThenBy(p => p.Month))
                                        {
                                            <tr>
                                                <td>
                                                    <i class="fas fa-calendar text-primary me-2"></i>
                                                    @Html.DisplayFor(modelItem => prediction.Year)
                                                </td>
                                                <td>@Html.DisplayFor(modelItem => prediction.Month)</td>
                                                <td>
                                                    <span class="badge @(prediction.Prediction.Contains("High") ? "bg-danger" : prediction.Prediction.Contains("Medium") ? "bg-warning" : "bg-success")">
                                                        @Html.DisplayFor(modelItem => prediction.Prediction)
                                                    </span>
                                                </td>
                                                <td>@Html.DisplayFor(modelItem => prediction.ModelFileName)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>No predictions available for this city yet.
                            </div>
                        }
                    </div>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                            <i class="fas fa-edit me-1"></i>Edit City
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

