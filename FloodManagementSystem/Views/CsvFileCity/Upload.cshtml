@model GlobalDisasterManagement.Models.DTO.PredictionFileViewModel
@{
    ViewData["Title"] = "Upload Prediction Data";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Upload Prediction Data
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="CsvFileCity" asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label for="file" class="form-label fw-semibold">
                                <i class="fas fa-file-csv me-1"></i>CSV File
                            </label>
                            <input type="file" name="file" id="file" class="form-control" accept=".csv" required />
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Upload CSV file containing prediction data
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Year" class="form-label fw-semibold">
                                <i class="fas fa-calendar me-1"></i>Year
                            </label>
                            <input type="text" asp-for="Year" class="form-control" placeholder="Enter year (e.g., 2024)" required />
                            <span asp-validation-for="Year" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="CityId" class="form-label fw-semibold">
                                    <i class="fas fa-city me-1"></i>City
                                </label>
                                <select asp-for="CityId" class="form-select" asp-items="@ViewBag.Cities">
                                    <option value="" selected disabled>-- Select City --</option>
                                </select>
                                <span asp-validation-for="CityId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="ModelId" class="form-label fw-semibold">
                                    <i class="fas fa-brain me-1"></i>Prediction Model
                                </label>
                                <select asp-for="ModelId" class="form-select" asp-items="@ViewBag.Models">
                                    <option value="" selected disabled>-- Select Model --</option>
                                </select>
                                <span asp-validation-for="ModelId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                <i class="fas fa-upload me-1"></i>Upload File
                            </button>
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
