@model GlobalDisasterManagement.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Profile Header Card -->
            <div class="card modern-card border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);">
                <div class="card-body p-4 text-white">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle p-3 me-3" style="background: rgba(255,255,255,0.2); width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user fa-3x"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h3 class="mb-1">@Model.UserName</h3>
                            <p class="mb-0 opacity-75"><i class="fas fa-envelope me-2"></i>@Model.Email</p>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-controller="UserAuthentication" class="btn btn-light">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Information Card -->
            <div class="card modern-card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2 text-primary"></i>Account Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1"><i class="fas fa-user me-2"></i>Username</label>
                                <p class="fw-semibold mb-0">@Model.UserName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1"><i class="fas fa-envelope me-2"></i>Email Address</label>
                                <p class="fw-semibold mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1"><i class="fas fa-phone me-2"></i>Phone Number</label>
                                <p class="fw-semibold mb-0">@(Model.PhoneNumber ?? "Not provided")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1"><i class="fas fa-id-card me-2"></i>User ID</label>
                                <p class="fw-semibold mb-0 small text-truncate">@Model.Id</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Location Card -->
            <div class="card modern-card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2 text-success"></i>Location Details</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1"><i class="fas fa-city me-2"></i>City</label>
                                <p class="fw-semibold mb-0">@(Model.CityName ?? "Not specified")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1"><i class="fas fa-map me-2"></i>Region/LGA</label>
                                <p class="fw-semibold mb-0">@(Model.LGAName ?? "Not specified")</p>
                            </div>
                        </div>
                    </div>
                    @if (string.IsNullOrEmpty(Model.CityName) && string.IsNullOrEmpty(Model.LGAName))
                    {
                        <div class="alert alert-info mt-3 mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Location information helps us provide relevant disaster alerts for your area.
                        </div>
                    }
                </div>
            </div>

            <!-- Security Card -->
            <div class="card modern-card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-shield-alt me-2 text-warning"></i>Security</h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="mb-1">Password</h6>
                            <p class="text-muted small mb-0">Last changed: Not tracked</p>
                        </div>
                        <div>
                            <a asp-action="ChangePassword" asp-controller="UserAuthentication" class="btn btn-outline-warning">
                                <i class="fas fa-key me-2"></i>Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-item {
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 0.5rem;
        transition: all 0.3s;
    }
    
    .info-item:hover {
        background: #e9ecef;
        transform: translateY(-2px);
    }
</style>
