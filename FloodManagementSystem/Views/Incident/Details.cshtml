@using Microsoft.Extensions.Localization
@inject IStringLocalizer<GlobalDisasterManagement.Resources.SharedResources> Localizer
@model GlobalDisasterManagement.Models.DisasterIncident

@{
    ViewData["Title"] = Localizer["IncidentDetails"];
    var photoUrls = string.IsNullOrEmpty(Model.PhotoUrls) 
        ? new List<string>() 
        : System.Text.Json.JsonSerializer.Deserialize<List<string>>(Model.PhotoUrls);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas @GetDisasterIcon(Model.DisasterType)"></i> @Localizer["IncidentDetails"]</h2>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> @Localizer["BackToList"]</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Main Information -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-@GetSeverityColor(Model.Severity) text-white">
                    <h4 class="mb-0">@Model.Title</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>@Localizer["DisasterType"]:</strong> @Localizer[Model.DisasterType.ToString()]</p>
                            <p><strong>@Localizer["Severity"]:</strong> <span class="badge bg-@GetSeverityColor(Model.Severity)">@Localizer[Model.Severity.ToString()]</span></p>
                            <p><strong>@Localizer["Status"]:</strong> <span class="badge bg-secondary">@Localizer[Model.Status.ToString()]</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>@Localizer["Reported"]:</strong> @Model.ReportedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                            @if (Model.ResolvedAt.HasValue)
                            {
                                <p><strong>@Localizer["ResolvedAt"]:</strong> @Model.ResolvedAt.Value.ToString("MMMM dd, yyyy HH:mm")</p>
                            }
                            <p>
                                <strong>@Localizer["Verification"]:</strong> 
                                @if (Model.IsVerified)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> @Localizer["Verified"]</span>
                                    @if (!string.IsNullOrEmpty(Model.VerifiedBy))
                                    {
                                        <br/><small>@Localizer["VerifiedBy"]: @Model.VerifiedBy (@Model.VerifiedAt?.ToString("MMM dd HH:mm"))</small>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-warning">@Localizer["PendingVerification"]</span>
                                }
                            </p>
                        </div>
                    </div>

                    <hr />

                    <h5>@Localizer["Description"]</h5>
                    <p>@Model.Description</p>

                    <hr />

                    <h5>@Localizer["Location"]</h5>
                    <p><i class="fas fa-map-marker-alt"></i> @Model.Address</p>
                    @if (Model.Latitude != 0 && Model.Longitude != 0)
                    {
                        <p><strong>Coordinates:</strong> @Model.Latitude, @Model.Longitude</p>
                        <div id="map" style="height: 300px;" class="mb-3"></div>
                    }

                    <hr />

                    <h5>Impact Assessment</h5>
                    <div class="row">
                        <div class="col-md-6">
                            @if (Model.AffectedPeople > 0)
                            {
                                <p><i class="fas fa-users text-danger"></i> <strong>Affected People:</strong> @Model.AffectedPeople</p>
                            }
                            @if (Model.RoadBlocked)
                            {
                                <p><i class="fas fa-road text-warning"></i> Road Blocked</p>
                            }
                            @if (Model.PowerOutage)
                            {
                                <p><i class="fas fa-bolt text-danger"></i> Power Outage</p>
                            }
                        </div>
                        <div class="col-md-6">
                            @if (Model.StructuralDamage)
                            {
                                <p><i class="fas fa-building text-danger"></i> Structural Damage</p>
                            }
                            @if (Model.PeopleTrapped)
                            {
                                <p><i class="fas fa-exclamation-triangle text-danger"></i> People Trapped</p>
                            }
                            @if (Model.CasualtiesReported)
                            {
                                <p><i class="fas fa-ambulance text-danger"></i> Casualties Reported</p>
                            }
                            @if (Model.EnvironmentalHazard)
                            {
                                <p><i class="fas fa-leaf text-warning"></i> Environmental Hazard</p>
                            }
                        </div>
                    </div>

                    @if (photoUrls != null && photoUrls.Any())
                    {
                        <hr />
                        <h5>Photos</h5>
                        <div class="row">
                            @foreach (var photoUrl in photoUrls)
                            {
                                <div class="col-md-4 mb-3">
                                    <img src="@photoUrl" class="img-fluid rounded" alt="Incident photo" />
                                </div>
                            }
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ResponseNotes))
                    {
                        <hr />
                        <h5>Response Notes</h5>
                        <div class="alert alert-info">@Model.ResponseNotes</div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <!-- Emergency Services -->
            <div class="card mb-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5><i class="fas fa-phone"></i> Emergency Services</h5>
                </div>
                <div class="card-body">
                    <p><strong>Emergency Notified:</strong> 
                        @if (Model.EmergencyServicesNotified)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">No</span>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(Model.AssignedResponders))
                    {
                        <p><strong>Assigned Responders:</strong><br />
                        @foreach (var responder in System.Text.Json.JsonSerializer.Deserialize<List<string>>(Model.AssignedResponders))
                        {
                            <span class="badge bg-primary me-1">@responder</span>
                        }
                        </p>
                    }
                    <hr />
                    <p><strong>Contact Phone:</strong><br />@(Model.ReporterPhone ?? "Not provided")</p>
                </div>
            </div>

            <!-- Admin Actions -->
            @if (User.IsInRole("admin"))
            {
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5><i class="fas fa-tools"></i> Admin Actions</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.IsVerified)
                        {
                            <form asp-action="Verify" asp-route-id="@Model.Id" method="post" class="mb-2">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-check"></i> Verify Incident
                                </button>
                            </form>
                        }

                        <button type="button" class="btn btn-warning w-100 mb-2" data-bs-toggle="modal" data-bs-target="#updateStatusModal">
                            <i class="fas fa-edit"></i> Update Status
                        </button>
                    </div>
                </div>
            }

            <!-- Related Actions -->
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-link"></i> Related Actions</h5>
                </div>
                <div class="card-body">
                    <a asp-controller="Shelter" asp-action="FindNearby" class="btn btn-success w-100 mb-2">
                        <i class="fas fa-home"></i> Find Nearby Shelter
                    </a>
                    <a asp-controller="Shelter" asp-action="Map" class="btn btn-info w-100">
                        <i class="fas fa-map"></i> View All Shelters
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Update Status Modal -->
@if (User.IsInRole("admin"))
{
    <div class="modal fade" id="updateStatusModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Update Incident Status</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="status" class="form-label">New Status</label>
                            <select class="form-select" id="status" name="status" required>
                                <option value="Pending" selected="@(Model.Status.ToString() == "Pending")">Pending</option>
                                <option value="InProgress" selected="@(Model.Status.ToString() == "InProgress")">In Progress</option>
                                <option value="Responding" selected="@(Model.Status.ToString() == "Responding")">Responding</option>
                                <option value="Contained" selected="@(Model.Status.ToString() == "Contained")">Contained</option>
                                <option value="Resolved" selected="@(Model.Status.ToString() == "Resolved")">Resolved</option>
                                <option value="Closed" selected="@(Model.Status.ToString() == "Closed")">Closed</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Status</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@functions {
    string GetSeverityColor(GlobalDisasterManagement.Models.IncidentSeverity severity)
    {
        return severity switch
        {
            GlobalDisasterManagement.Models.IncidentSeverity.Low => "success",
            GlobalDisasterManagement.Models.IncidentSeverity.Moderate => "warning",
            GlobalDisasterManagement.Models.IncidentSeverity.High => "danger",
            GlobalDisasterManagement.Models.IncidentSeverity.Critical => "danger",
            GlobalDisasterManagement.Models.IncidentSeverity.Catastrophic => "dark",
            _ => "secondary"
        };
    }

    string GetDisasterIcon(GlobalDisasterManagement.Models.DisasterType type)
    {
        return type switch
        {
            GlobalDisasterManagement.Models.DisasterType.Flood => "fa-water",
            GlobalDisasterManagement.Models.DisasterType.Earthquake => "fa-house-damage",
            GlobalDisasterManagement.Models.DisasterType.Fire => "fa-fire",
            GlobalDisasterManagement.Models.DisasterType.Hurricane => "fa-wind",
            GlobalDisasterManagement.Models.DisasterType.Tornado => "fa-tornado",
            GlobalDisasterManagement.Models.DisasterType.Tsunami => "fa-water",
            GlobalDisasterManagement.Models.DisasterType.Wildfire => "fa-fire-alt",
            _ => "fa-exclamation-triangle"
        };
    }
}

@section Scripts {
    @if (Model.Latitude != 0 && Model.Longitude != 0)
    {
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
        
        <script>
            var map = L.map('map').setView([@Model.Latitude, @Model.Longitude], 15);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: 'Â© OpenStreetMap contributors'
            }).addTo(map);
            
            var marker = L.marker([@Model.Latitude, @Model.Longitude]).addTo(map);
            marker.bindPopup("<b>@Model.Title</b><br>@Model.Address").openPopup();
        </script>
    }
}
