<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Global Disaster Management System</title>
    
    <!-- Bootstrap 5.3.2 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body data-user-city-id="@ViewBag.UserCityId" data-user-lga-id="@ViewBag.UserLgaId">
    <!-- Modern Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Admin" asp-action="Index">
                <i class="fas fa-shield-alt me-2"></i>
                <strong>GDMS Admin</strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-chart-line me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-map-marked-alt me-1"></i>Locations
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="LGA" asp-action="Index">Regions</a></li>
                                <li><a class="dropdown-item" asp-controller="City" asp-action="Index">Cities</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-file-csv me-1"></i>Data Files
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="CsvFile" asp-action="Index">Model Files</a></li>
                                <li><a class="dropdown-item" asp-controller="CsvFileCity" asp-action="Index">Prediction Files</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Users
                            </a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item me-2">
                        @await Html.PartialAsync("_LanguageSwitcher")
                    </li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UserAuthentication" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="min-vh-100">
        @RenderBody()
    </main>

    <!-- Modern Footer -->
    <footer class="mt-5 py-4" style="background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%); color: white;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-shield-alt me-2"></i>GDMS
                    </h5>
                    <p class="mb-2">Global Disaster Management System</p>
                    <p class="small opacity-75">
                        A comprehensive platform for disaster prediction, monitoring, and early warning.
                        Serving communities with vital information to save lives.
                    </p>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none opacity-75 hover-opacity-100">About</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none opacity-75 hover-opacity-100">Contact</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none opacity-75 hover-opacity-100">Privacy Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none opacity-75 hover-opacity-100">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Admin Portal</h6>
                    <p class="small opacity-75">
                        Manage your disaster management system, monitor alerts, and ensure community safety.
                    </p>
                </div>
            </div>
            <hr class="my-4 opacity-25">
            <div class="text-center small opacity-75">
                <p class="mb-0">
                    Copyright &copy; 2023-2025 - All Rights Reserved - 
                    <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none fw-bold">GDMS</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <a href="#" class="btn btn-primary rounded-circle position-fixed bottom-0 end-0 m-4" 
       style="width: 50px; height: 50px; display: none; z-index: 1000;" id="backToTop">
        <i class="fas fa-chevron-up"></i>
    </a>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/flood-alerts.js" asp-append-version="true"></script>
    
    <!-- Back to Top Script -->
    <script>
        $(document).ready(function() {
            $(window).scroll(function() {
                if ($(this).scrollTop() > 100) {
                    $('#backToTop').fadeIn();
                } else {
                    $('#backToTop').fadeOut();
                }
            });
            
            $('#backToTop').click(function(e) {
                e.preventDefault();
                $('html, body').animate({scrollTop: 0}, 300);
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
