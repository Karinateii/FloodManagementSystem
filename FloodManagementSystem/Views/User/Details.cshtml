@model GlobalDisasterManagement.Models.User
@{
    ViewData["Title"] = "User Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user me-2"></i>User Details
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-user me-2"></i>Username
                            </h6>
                            <p class="fs-5 fw-semibold">@Model.UserName</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-envelope me-2"></i>Email
                            </h6>
                            <p class="fs-5">@Model.Email</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-phone me-2"></i>Phone Number
                            </h6>
                            <p class="fs-5">@(Model.PhoneNumber ?? "N/A")</p>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="text-muted mb-3">
                        <i class="fas fa-map-marked-alt me-2"></i>Location Information
                    </h5>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-map-marker-alt me-2"></i>Region / LGA
                            </h6>
                            <p class="fs-5">@(Model.LGAName ?? "Not specified")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-city me-2"></i>City
                            </h6>
                            <p class="fs-5">@(Model.CityName ?? "Not specified")</p>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
