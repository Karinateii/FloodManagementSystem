@model IEnumerable<GlobalDisasterManagement.Models.LGA>

@{
    ViewData["Title"] = "Region Management";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-map-marked-alt text-success me-2"></i>Region Management
                    </h2>
                    <p class="text-muted mb-0">Manage local government areas and regions</p>
                </div>
                <div>
                    <a asp-action="CreateLGA" class="btn btn-success me-2">
                        <i class="fas fa-plus me-1"></i> Create New Region
                    </a>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-map-marker-alt me-2"></i>@Html.DisplayNameFor(model => model.LGAName)</th>
                            <th class="text-center" style="width: 250px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="table-secondary">
                            <td><strong>None</strong></td>
                            <td class="text-center">
                                <span class="badge bg-secondary">System Default</span>
                            </td>
                        </tr>
                        @if (Model?.Any() == true)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <strong>@Html.DisplayFor(modelItem => item.LGAName)</strong>
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.LGAId" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Detail" asp-route-id="@item.LGAId" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-info-circle"></i> Details
                                            </a>
                                            <a asp-action="DeleteLGA" asp-route-id="@item.LGAId" class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Are you sure you want to delete this region? This may affect associated cities.');">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center py-5 text-muted">
                                    <i class="fas fa-map-marked-alt fa-3x mb-3 opacity-25"></i>
                                    <p class="mb-0">No regions found. Click "Create New Region" to add one.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
