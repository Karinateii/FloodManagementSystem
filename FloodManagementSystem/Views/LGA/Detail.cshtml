@model GlobalDisasterManagement.Models.LGA
@{
    ViewData["Title"] = "Region Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-map-marked-alt me-2"></i>Region Details
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="text-muted mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>Region Name
                        </h5>
                        <p class="fs-5 fw-semibold">@Html.DisplayFor(model => model.LGAName)</p>
                    </div>

                    <hr class="my-4" />

                    <div class="mb-3">
                        <h5 class="text-muted mb-3">
                            <i class="fas fa-city me-2"></i>Cities in this Region
                        </h5>
                        @if (Model.Cities?.Any() == true)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>City Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model.Cities)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="fas fa-city text-warning me-2"></i>
                                                    @Html.DisplayFor(model => item.Name)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>No cities associated with this region yet.
                            </div>
                        }
                    </div>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.LGAId" class="btn btn-primary me-2">
                            <i class="fas fa-edit me-1"></i>Edit Region
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


