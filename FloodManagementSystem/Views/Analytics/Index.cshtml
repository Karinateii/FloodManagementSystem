@model GlobalDisasterManagement.Models.DTO.Analytics.DashboardKpiDto

@{
    ViewData["Title"] = "Analytics Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="fas fa-chart-line me-2"></i>Analytics Dashboard
                </h1>
                <div>
                    <button class="btn btn-outline-primary" onclick="refreshDashboard()">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                    <a href="@Url.Action("Reports")" class="btn btn-primary">
                        <i class="fas fa-file-pdf"></i> Generate Report
                    </a>
                </div>
            </div>
            <p class="text-muted mb-0">
                <small>Last Updated: @Model.LastUpdated.ToString("MMM dd, yyyy HH:mm")</small>
                <span class="badge bg-info ms-2">@Model.Period</span>
            </p>
        </div>
    </div>

    <!-- Alert Metrics -->
    <div class="row mb-4">
        <div class="col-12">
            <h5 class="mb-3"><i class="fas fa-exclamation-triangle text-warning me-2"></i>Alert Metrics</h5>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Total Alerts</p>
                            <h3 class="mb-0">@Model.TotalAlerts</h3>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-bell fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Active Alerts</p>
                            <h3 class="mb-0 text-danger">@Model.ActiveAlerts</h3>
                        </div>
                        <div class="text-danger">
                            <i class="fas fa-exclamation-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Resolved</p>
                            <h3 class="mb-0 text-success">@Model.ResolvedAlerts</h3>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Effectiveness Rate</p>
                            <h3 class="mb-0">@Model.AlertEffectivenessRate.ToString("F1")%</h3>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-chart-pie fa-2x"></i>
                        </div>
                    </div>
                    <div class="progress mt-2" style="height: 5px;">
                        <div class="progress-bar bg-info" role="progressbar" style="width: @Model.AlertEffectivenessRate%" aria-valuenow="@Model.AlertEffectivenessRate" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Incident Metrics -->
    <div class="row mb-4">
        <div class="col-12">
            <h5 class="mb-3"><i class="fas fa-fire text-danger me-2"></i>Incident Metrics</h5>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Total Incidents</p>
                            <h3 class="mb-0">@Model.TotalIncidents</h3>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-clipboard-list fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Pending</p>
                            <h3 class="mb-0 text-warning">@Model.PendingIncidents</h3>
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-hourglass-half fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Avg Response Time</p>
                            <h3 class="mb-0">@Model.AverageResponseTime.ToString("F1")</h3>
                            <small class="text-muted">minutes</small>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-stopwatch fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted mb-1">Resolution Rate</p>
                            <h3 class="mb-0">@Model.IncidentResolutionRate.ToString("F1")%</h3>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-tasks fa-2x"></i>
                        </div>
                    </div>
                    <div class="progress mt-2" style="height: 5px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.IncidentResolutionRate%" aria-valuenow="@Model.IncidentResolutionRate" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Shelter & IoT Metrics -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <h5 class="mb-0"><i class="fas fa-home text-primary me-2"></i>Shelter Metrics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="text-center mb-3">
                                <p class="text-muted mb-1">Total Shelters</p>
                                <h4 class="mb-0">@Model.TotalShelters</h4>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center mb-3">
                                <p class="text-muted mb-1">Active</p>
                                <h4 class="mb-0 text-success">@Model.ActiveShelters</h4>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Utilization Rate</span>
                                    <span class="fw-bold">@Model.ShelterUtilizationRate.ToString("F1")%</span>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @(Model.ShelterUtilizationRate > 80 ? "bg-danger" : Model.ShelterUtilizationRate > 60 ? "bg-warning" : "bg-success")" 
                                         role="progressbar" 
                                         style="width: @Model.ShelterUtilizationRate%" 
                                         aria-valuenow="@Model.ShelterUtilizationRate" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @Model.CurrentOccupancy / @Model.TotalCapacity
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("ShelterAnalytics")" class="btn btn-sm btn-outline-primary w-100">
                            <i class="fas fa-chart-bar me-1"></i>View Detailed Analytics
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <h5 class="mb-0"><i class="fas fa-broadcast-tower text-info me-2"></i>IoT Sensor Metrics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 text-center">
                            <div class="mb-3">
                                <i class="fas fa-circle text-success fa-2x mb-2"></i>
                                <p class="text-muted mb-1">Active</p>
                                <h5 class="mb-0">@Model.ActiveSensors</h5>
                            </div>
                        </div>
                        <div class="col-4 text-center">
                            <div class="mb-3">
                                <i class="fas fa-circle text-danger fa-2x mb-2"></i>
                                <p class="text-muted mb-1">Inactive</p>
                                <h5 class="mb-0">@Model.InactiveSensors</h5>
                            </div>
                        </div>
                        <div class="col-4 text-center">
                            <div class="mb-3">
                                <i class="fas fa-circle text-warning fa-2x mb-2"></i>
                                <p class="text-muted mb-1">Maintenance</p>
                                <h5 class="mb-0">@Model.MaintenanceSensors</h5>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <span>Sensor Health Rate</span>
                                    <span class="fw-bold">@Model.SensorHealthRate.ToString("F1")%</span>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar @(Model.SensorHealthRate > 90 ? "bg-success" : Model.SensorHealthRate > 70 ? "bg-warning" : "bg-danger")" 
                                         role="progressbar" 
                                         style="width: @Model.SensorHealthRate%">
                                        @Model.ActiveSensors / @Model.TotalSensors
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("IoTSensorPerformance")" class="btn btn-sm btn-outline-info w-100">
                            <i class="fas fa-chart-bar me-1"></i>View Sensor Analytics
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Notifications & User Engagement -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <h5 class="mb-0"><i class="fas fa-paper-plane text-success me-2"></i>Notifications Today</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-3">
                            <i class="fas fa-sms text-primary fa-2x mb-2"></i>
                            <p class="text-muted mb-1 small">SMS</p>
                            <h5 class="mb-0">@Model.SmsNotifications</h5>
                        </div>
                        <div class="col-3">
                            <i class="fas fa-mobile-alt text-info fa-2x mb-2"></i>
                            <p class="text-muted mb-1 small">Push</p>
                            <h5 class="mb-0">@Model.PushNotifications</h5>
                        </div>
                        <div class="col-3">
                            <i class="fab fa-whatsapp text-success fa-2x mb-2"></i>
                            <p class="text-muted mb-1 small">WhatsApp</p>
                            <h5 class="mb-0">@Model.WhatsAppNotifications</h5>
                        </div>
                        <div class="col-3">
                            <i class="fas fa-phone text-warning fa-2x mb-2"></i>
                            <p class="text-muted mb-1 small">Voice</p>
                            <h5 class="mb-0">@Model.VoiceNotifications</h5>
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <h4 class="mb-0">@Model.NotificationsSentToday</h4>
                        <p class="text-muted mb-0">Total Notifications</p>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("NotificationAnalytics")" class="btn btn-sm btn-outline-success w-100">
                            <i class="fas fa-chart-line me-1"></i>View Notification Analytics
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0">
                    <h5 class="mb-0"><i class="fas fa-users text-warning me-2"></i>User Engagement</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 text-center">
                            <div class="mb-3">
                                <h4 class="mb-0">@Model.TotalUsers</h4>
                                <p class="text-muted mb-0 small">Total Users</p>
                            </div>
                        </div>
                        <div class="col-4 text-center">
                            <div class="mb-3">
                                <h4 class="mb-0 text-success">@Model.ActiveUsersToday</h4>
                                <p class="text-muted mb-0 small">Active Today</p>
                            </div>
                        </div>
                        <div class="col-4 text-center">
                            <div class="mb-3">
                                <h4 class="mb-0 text-info">@Model.NewUsersThisWeek</h4>
                                <p class="text-muted mb-0 small">New This Week</p>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("DisasterImpact")" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-chart-area me-1"></i>Disaster Impact Analysis
                        </a>
                        <a href="@Url.Action("ResponseEffectiveness")" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-tachometer-alt me-1"></i>Response Effectiveness
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <h5 class="mb-0"><i class="fas fa-link me-2"></i>Quick Access</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("PredictionAccuracy")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-brain me-2"></i>ML Predictions
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("HeatMap")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-map-marked-alt me-2"></i>Heat Map
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("ComparativeAnalysis")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-balance-scale me-2"></i>Comparative Analysis
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Reports")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-file-export me-2"></i>Export Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function refreshDashboard() {
            location.reload();
        }
        
        // Auto-refresh every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}
